@model List<OrderViewModel>

<a asp-action="CreateOrder" class="btn btn-primary mb-3">Add new</a>
<div class="border rounded shadow">
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Phone number</th>
                <th scope="col">Address</th>
                <th scope="col">Note</th>
                <th scope="col">Total price</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].PhoneNumber</td>
                    <td>@Model[i].Address</td>
                    <td>@Model[i].Note</td>
                    <td>@Model[i].TotalPrice</td>
                    <td>
                        <a asp-action="Details" asp-controller="Order" asp-route-id="@Model[i].Id" class="btn btn-warning">Details</a>
                        <a asp-action="Delete" asp-controller="Order" asp-route-id="@Model[i].Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>