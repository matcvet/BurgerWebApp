@model MenuItemViewModel

<form method="post" asp-action="Save" asp-controller="Menu">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="BurgerId"></label>
        <select asp-for="BurgerId" asp-items="@(IEnumerable<SelectListItem>) ViewBag.Burgers" class="form-control">
            <option>-- Select burger --</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="SizeId"></label>
        <select asp-for="SizeId" asp-items="@(IEnumerable<SelectListItem>) ViewBag.Sizes" class="form-control">
            <option>-- Select size --</option>
        </select>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" />
    </div>
    <input type="submit" class="btn btn-primary float-right" value="Save" />
</form>