@model List<MenuItemViewModel>

<a asp-action="CreateEditMenuItem" class="btn btn-primary mb-3">Add new</a>
<div class="border rounded shadow">
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Size</th>
                <th scope="col">Price</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@Model[i].Burger.Name (@Model[i].Burger.Description)</td>
                    <td>@Model[i].Size.Name (@Model[i].Size.Description)</td>
                    <td>@Model[i].Price</td>
                    <td>
                        <a asp-action="CreateEditMenuItem" class="btn btn-warning" asp-route-id="@Model[i].Id">Edit</a>
                        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model[i].Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

