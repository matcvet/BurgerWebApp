@model List<SizeViewModel>

<a asp-action="CreateEditSize" class="btn btn-primary mb-3">Add new</a>
<div class="border rounded shadow">
    <table class="table">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.Count; i++)
            {
                <tr>
                    <th scope="row">@(i + 1)</th>
                    <td>@Model[i].Name</td>
                    <td>@Model[i].Description</td>
                    <td>
                        <a asp-action="CreateEditSize" asp-controller="Size" asp-route-id="@Model[i].Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-controller="Size" asp-route-id="@Model[i].Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>